<phpunit bootstrap="TestBootstrap.php" colors="true" processIsolation="false">
	<testsuites>
		<testsuite name="DevStack">
			<directory>.</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="coverage/" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
	</logging>
	<filter>
		<blacklist>
			<directory>helpers/</directory>
			<directory suffix=".php">/usr/share/pear/Symfony/Component/Yaml</directory>
		</blacklist>
	</filter>
</phpunit>